<% if current_user.admin? || current_user.manager? %>
	<div class='container'>
		<span style = 'font-size:18pt'><strong>All Users</strong></span>
		&nbsp;&nbsp;
		<!-- <%= link_to "+ Add User", new_user_path%> -->
		<br /><br />

		<table class = 'table table-condensed table-bordered table-striped' id="users">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email</th>
				<th>Teams</th>
				<th>Role</th>
					<th>Last Sign In</th>
					<!-- <th></th>
					<th></th> -->
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<% if !user.admin? && user.teams.exists? %>
							<td><%= user.first_name %></td>
							<td><%= user.last_name %></td>
							<td><%= user.email %></td>
					<td>
						<% user.teams.each do |team| %>
						<%= link_to team.name, team %>&nbsp;
						<% end %>
					</td>
					<td><%= user.role %></td>
							<td><%if user.last_sign_in_at.blank? %>Never logged in<% else %><%= time_ago_in_words(user.last_sign_in_at.to_datetime)+' ago' %><% end %></td>
							<!-- <td><%= link_to "Edit", edit_user_path(user) %></td>
							<td><%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure?" %></td> -->
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<% elsif %>
	<div class = 'container'>
		<div class = 'alert alert-warning'>
			You are not permitted to view this page.
		</div>
	</div>
<% end %>