<div class = 'container'>
  <span style = 'font-size:18pt'><strong><%= @team.name %></strong></span>
  &nbsp;&nbsp;
  <%= link_to edit_team_path(@team) do %>
    <span style = 'font-size:11pt'>
      <span class = 'has-tooltip' data-toggle='tooltip' title='Edit Team'>
        <span class = 'glyphicon glyphicon-pencil'></span>
      </span>
    </span>
  <% end %>
  &nbsp;
  <%= link_to @team, method: :delete, data: {confirm: 'Are you sure you want to delete this team?' } do %>
    <span class = 'has-tooltip' data-toggle='tooltip' title='Delete Team'>
      <span class = 'glyphicon glyphicon-trash'></span>
    </span>
  <% end %>
  <br />
  <%# Owner: <%= @team.user.first_name + ' ' + @team.user.last_name %>
  <br />
  <% if team_status(@team.id) == "0 losses"%>
    <span class = "label label-success">0 losses</span>
  <% elsif team_status(@team.id) == "1 loss" %>
    <span class= "label label-warning">1 loss</span>
  <% else %>
    <span class = "label label-danger">out</span>
  <% end %>
  <br />
  <br />
  <div id="picks">
    <table class = 'table table-condensed table-bordered table-striped'>
      <% set_current_week %>
      <tr>
        <% for i in 1..set_current_week %>
          <th><center><%= "Wk #{i}" %></center></th>
        <% end %>
      </tr>
      <tr>
        <% @pick.order(:nfl_week).each do |pick| %> <!-- Lists all picks for given team -->
          <%if pick.loss? %>
              <% if current_user.admin? || current_user.manager? %>
                <td style="background-color: #f2a1a1"><center><%= link_to pick.nfl_team, edit_pick_path(pick.id)%></center></td>
              <% else %>
                <td style="background-color: #f2a1a1"><center><%= pick.nfl_team %></center></td>
              <% end %>
          <% else %>
            <% if current_user.admin? || current_user.manager? %>
              <td><center><%= link_to pick.nfl_team, edit_pick_path(pick.id)%></center></td>
            <% else %>
              <td><center><%= pick.nfl_team %></center></td>
            <% end %>
          <% end %>
        <% end %>
        <% if current_user.admin? || current_user.manager? %>
          <% if lost_count(@team.id) < 1 && no_pick_exists(@team.id)%><!-- Hard-coded to double-elimination. League options will determine single or double elimination -->
            <td><center><%= link_to "+ Make Pick", new_team_pick_path(@team.id), class: 'btn btn-primary btn-xs' %></center></td>
          <% end %>
        <% end %>
      </tr>
    </table>
  </div>
</div>
