  <body>
    <div class = 'container'>
      <br />
      <% if user_signed_in? %>
        <%= link_to 'King of the Hill', root_url, style: "font-size: 250%; color:black; text-decoration: none;" %><br /><br />
        <ul class="nav nav-tabs">
          <li class="<%= 'active' if params[:controller] == 'home' %>"> <a href="/">Standings</a> </li>
          <li class="<%= 'active' if params[:controller] == 'rules' %>"> <a href="/rules">FAQ</a> </li>
          <div class = 'pull-right'>
            Hello, <strong><%= "#{current_user.first_name} #{current_user.last_name}" %></strong><br />
            <% if current_user.admin? %>
              <%= link_to 'Admin', rails_admin_path, :class => 'navbar-link' %> |
            <% end %>
            <% if current_user.manager? || current_user.admin? %>
              <%= link_to 'User List', users_path, :class => 'navbar-link' %> |
            <% end %>
            <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %>
            | <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
          </div>
        </ul>
      <% end %>
      <br />
      <div class = 'flash'>
        <% if flash[:notice] %>
          <div class = 'alert alert-success'>
            <button type = 'button' class = 'close' data-dismiss = 'alert'>&times;</button>
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class = 'alert alert-warning'>
            <button type = 'button' class = 'close' data-dismiss = 'alert'>&times;</button>
            <%= flash[:alert] %>
          </div>
        <% end %>
      </div>
    </div>
    <div class = 'tab-content'>
      <%= yield %>
    </div>
